{
  "name": "filament-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for Filament",
  "type": "module",
  "license": "MIT",
  "bin": {
    "filament-server": "build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
